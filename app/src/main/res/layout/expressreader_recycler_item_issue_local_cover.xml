<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_magazine_history_item_cover_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <CheckBox
        android:id="@+id/cb_issue_local_item_checkable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_5"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.cnpeak.expressreader.view.widget.TagText
            android:id="@+id/tv_issue_local_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_5"
            android:textColor="#5978beeb"
            android:textSize="@dimen/sp_16"
            app:tagDrawable="@drawable/expressreader_magazine_issue_number_bg" />

        <TextView
            android:id="@+id/tv_issue_local_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8" />

        <ImageView
            android:id="@+id/iv_issue_local_item_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:contentDescription="@string/expressreader_magazine_cover"
            tools:background="@drawable/expressreader_default_cover" />

    </LinearLayout>

</LinearLayout>
