<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_recycler_empty_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <com.cnpeak.expressreader.view.widget.TagText
        android:id="@+id/tv_magazine_history_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_weight="1"
        android:textColor="#A7A9AB"
        android:textSize="@dimen/sp_16"
        app:tagDrawable="@drawable/expressreader_magazine_label_hot_bg" />

    <ImageView
        android:id="@+id/iv_issue_local_item_cover"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_75"
        android:layout_gravity="center_vertical|end"
        android:contentDescription="@string/expressreader_magazine_cover"
        android:scaleType="matrix" />

</LinearLayout>
