<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_fragment_hotspot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        app:tabBackground="@drawable/expressreader_appbar_bg"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/expressreader_colorPrimaryDark"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="@dimen/dp_2"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/expressreader_colorPrimaryDark"
        app:tabTextAppearance="@style/ExpressReader_TabTextAppearance"
        app:tabTextColor="#000" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_fragment_hotspot_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

