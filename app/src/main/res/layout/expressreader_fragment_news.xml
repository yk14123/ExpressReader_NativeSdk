<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_hotspot_tab_wrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/expressreader_colorPrimary"
        android:orientation="horizontal">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_fragment_hotspot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/expressreader_white"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="@dimen/dp_2"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/expressreader_white_light"
            app:tabTextAppearance="@style/ExpressReader_TabTextAppearance"
            app:tabTextColor="#b2ffffff" />

        <ImageView
            android:id="@+id/iv_hotspot_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_8"
            android:background="@drawable/expressreader_icon_menu"
            android:contentDescription="@string/expressreader_drag_reorganize" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/expressreader_appbar_bg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@drawable/expressreader_icon_flame"
            android:contentDescription="@string/expressreader_hot_news" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_fragment_hotspot_banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />
    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp_fragment_hotspot_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

