<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_image_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/expressreader_black"
    tools:context=".view.news.news_image.ImageDetailActivity">

    <com.cnpeak.expressreader.view.widget.ZoomViewPaper
        android:id="@+id/vp_image_detail_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tv_image_detail_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center|start"
        android:padding="@dimen/dp_10"
        android:textColor="@color/expressreader_white"
        android:textSize="@dimen/sp_14"
        tools:text="1/2" />

</RelativeLayout>