<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_appbar_wrapper"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    app:cardElevation="@dimen/dp_3"
    app:contentPadding="@dimen/dp_8">

    <ImageView
        android:id="@+id/iv_appbar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/expressreader_icon_arrow_left" />

    <TextView
        android:id="@+id/tv_appbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/expressreader_summaryTextColor"
        android:textSize="@dimen/sp_16"
        tools:text="title" />

    <ImageView
        android:id="@+id/iv_appbar_action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/expressreader_news_default_head"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_appbar_action"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:gravity="center"
        android:padding="@dimen/dp_4"
        android:textColor="@color/expressreader_summaryTextColor"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        tools:text="title" />

</androidx.cardview.widget.CardView>