<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_issue_lite_topic_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <com.cnpeak.expressreader.view.widget.TagText
        android:id="@+id/tv_magazine_history_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_5"
        android:textColor="#A7A9AB"
        android:textSize="@dimen/sp_16"
        app:tagDrawable="@drawable/expressreader_magazine_label_cover_bg" />

    <ImageView
        android:id="@+id/iv_magazine_cover_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:contentDescription="@string/expressreader_magazine_cover"
        tools:background="@drawable/expressreader_default_cover" />

</LinearLayout>
