<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cnpeak.expressreader">
    <!--网络相关权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--文件读写相关权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--获取地理位置权限-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:name="com.cnpeak.expressreader.ErApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/expressreader_app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/ExpressReader_SplashTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        tools:targetApi="n">

        <activity
            android:name="com.cnpeak.expressreader.view.splash.ErSplashActivity"
            android:theme="@style/ExpressReader_SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cnpeak.expressreader.view.home.ErHomeActivity"
            android:theme="@style/ExpressReader_NoActionBar" />
        <activity
            android:name="com.cnpeak.expressreader.view.news.news_detail.NewsDetailActivity"
            android:configChanges="orientation|screenLayout|screenSize|locale|keyboard|keyboardHidden"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:theme="@style/ExpressReader_NewsDetailTheme" />
        <activity
            android:name="com.cnpeak.expressreader.view.news.news_image.ImageDetailActivity"
            android:theme="@style/ExpressReader_ImageScaleAction" />
        <activity
            android:name="com.cnpeak.expressreader.view.magazine.magazine_units.MagazineUnitActivity"
            android:theme="@style/ExpressReader_MagazineStyle" />
        <activity
            android:name="com.cnpeak.expressreader.view.magazine.magazine_detail.MagazineDetailActivity"
            android:theme="@style/ExpressReader_MagazineStyle" />
        <activity
            android:name="com.cnpeak.expressreader.view.newspaper.paper_news.PaperNewsActivity"
            android:theme="@style/ExpressReader_NoActionBar" />
        <activity
            android:name="com.cnpeak.expressreader.view.magazine.magazine_review.MagazineReviewActivity"
            android:theme="@style/ExpressReader_MagazineStyle" />
        <activity
            android:name="com.cnpeak.expressreader.view.mine.locale.LocaleSettingActivity"
            android:theme="@style/ExpressReader_NoActionBar" />
        <activity
            android:name="com.cnpeak.expressreader.view.mine.local.LocalHistoryActivity"
            android:theme="@style/ExpressReader_NoActionBar" />
    </application>
</manifest>